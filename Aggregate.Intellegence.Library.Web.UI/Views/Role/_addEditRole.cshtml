<form id="addEditRoleForm">
    <div class="modal fade" id="addEditRoleModal" tabindex="-1" aria-labelledby="addEditRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" style="max-width: 60% !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEditRoleModalLabel">Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="padding:10px !important">
                    <input type="hidden" id="Id" />
                    <div class="form-row">
                        <div class="col-12 mb-6">
                            <label for="Role" class="form-label">Role</label>
                            <input type="text" class="form-control" id="Role" name="Role" placeholder="Enter the role..." autofocus required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12 mb-6">
                            <label for="Code" class="form-label">Code</label>
                            <input type="text" class="form-control" id="Code" name="Description" placeholder="Enter the code..." autofocus required />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="SaveRole">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>